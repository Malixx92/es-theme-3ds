<view name="grid">
 <image name="gridbg" extra="true">
	<tile>false</tile>
	<path>./_assets/bg_gamelist.png</path>
	<size>1 1</size>
	<pos>0 0</pos>
	<zIndex>1</zIndex>
 </image>
</view>

<!-- System View -->
<feature supported="carousel">
<view name="system">

 <text name="systemInfo">
	<alignment>right</alignment>
	<backgroundColor>00000000</backgroundColor>
	<color>111111</color>
	<origin>1 0.5</origin>
	<pos>0.9 0.042</pos>
	<size>1 0.050</size>
	<fontSize>0.045</fontSize>
 </text>
 
 <image name="logo">
	<path>./_assets/logos/${system.theme}.svg</path>
 </image>

 <carousel name="systemcarousel">
	<type>horizontal</type>
	<color>00000000</color>
	<origin>0.5 0.5</origin>
	<pos>0.295 0.795</pos>
	<size>1 0.25</size> 
	<logoScale>0.5</logoScale>
	<logoSize>0.425 0.425</logoSize>
	<maxLogoCount>1</maxLogoCount>
	<logoAlignment>center</logoAlignment> 
 </carousel>
 
 <text name="dev" extra="true">
	<fontPath>./_assets/Roboto-Medium.ttf</fontPath>
	<alignment>center</alignment>
	<fontSize>0.08</fontSize>
	<color>282421</color>
	<origin>0.5 0.5</origin>
	<pos>0.62 0.755</pos>
 </text>
 
 <text name="releasedate" extra="true">
	<fontPath>./_assets/Roboto-Medium.ttf</fontPath>
	<alignment>center</alignment>
	<forceUppercase>0</forceUppercase>
	<fontSize>0.04</fontSize>
	<color>282421</color>
	<origin>0.5 0.5</origin>
	<pos>0.62 0.83</pos>
 </text>

 <helpsystem name="help">
	<pos>10 10</pos>
 </helpsystem>
  
</view>
</feature>


<!-- Gamelist View -->

<view name="basic, detailed, video, grid">

 <image name="logo2" extra="true">
	<path>./_assets/logos/${system.theme}.svg</path>
	<origin>0.5 0.5</origin>
	<pos>0.5 0.065</pos>
	<maxSize>0.25 0.25</maxSize>
 </image>
 
<textlist name="gamelist">
	<selectorColor>ABAEB4</selectorColor>
	<selectedColor>6F7070</selectedColor>
	<primaryColor>111111</primaryColor>
	<secondaryColor>eac428</secondaryColor>
	<fontPath>./_assets/Roboto-Medium.ttf</fontPath>
	<alignment>left</alignment>
	<origin>0.5 0.5</origin>
	<pos>0.25 0.5</pos>
	<size>0.5 0.75</size>
	<fontSize>0.03</fontSize>
	<lineSpacing>1.70</lineSpacing>
	<horizontalMargin>0.05</horizontalMargin>
</textlist>

<!-- Hide Unused Elements -->	
<text name="md_description, md_lbl_players, md_players, md_lbl_developer, md_developer, md_lbl_publisher, md_publsher, md_lbl_genre, md_genre, md_lbl_playcount, md_playcount, md_lbl_lastplayed, md_lbl_releasedate, md_lbl_rating">
	<pos>1 1</pos>
</text>
<datetime name="md_lastplayed, md_releasedate">
	<pos>1 1</pos>
</datetime>
<rating name="md_rating">
	<pos>1 1</pos>
</rating>

 <helpsystem name="help">
	<pos>10 10</pos>
 </helpsystem>

</view>

<view name="basic, detailed, grid">
 <image name="md_image">
	<origin>0.5 0.5</origin>
	<pos>0.75 0.5</pos>
	<maxSize>0.5 0.5</maxSize>
 </image>
</view>

<feature supported="video">
<view name="video">
 <video name="md_video">
	<origin>0.5 0.5</origin>
	<pos>0.6925 0.3915</pos>
	<maxSize>0.4292 0.5297</maxSize>
	<delay>2</delay>
	<showSnapshotNoVideo>true</showSnapshotNoVideo>
	<showSnapshotDelay>true</showSnapshotDelay>
 </video>
</view>
</feature>

<!-- Grid View -->
<view name="grid">

 <text name="md_name">
	<fontPath>./_assets/Roboto-Medium.ttf</fontPath>
	<fontSize>0.08</fontSize>
	<color>282421</color>
	<origin>0.5 0.5</origin>
	<pos>0.5 0.33</pos>
	<size>0.8 0.25</size>
 </text>
 
 <!-- Grid -->
 <imagegrid name="gamegrid">
	<scrollDirection>horizontal</scrollDirection>
	<pos>0.105 0.53</pos>
	<size>0.8 0.25</size>
	<margin>0.125 0</margin>
 </imagegrid>
 <gridtile name="default">
	<size>0.18 0.25</size>
	<backgroundColor>F8F8F8</backgroundColor>
 </gridtile>
 <gridtile name="selected">
	<size>0.18 0.25</size>
	<backgroundColor>28E9B0</backgroundColor>
 </gridtile>
</view>
</theme>
