<theme>
<formatVersion>4</formatVersion>

<!-- Global Settings -->
<view name="system, basic, detailed, video, grid">

	<!-- Hide Unused Elements -->	
	<text name="md_description, md_lbl_players, md_players, md_lbl_developer, md_developer, md_lbl_publisher, md_publsher, md_lbl_genre, md_genre, md_lbl_playcount, md_playcount, md_lbl_lastplayed, md_lbl_releasedate, md_lbl_rating">
		<pos>1 1</pos>
	</text>
	<datetime name="md_lastplayed, md_releasedate">
		<pos>1 1</pos>
	</datetime>
	<rating name="md_rating">
		<pos>1 1</pos>
	</rating>
	<helpsystem name="help">
		<pos>10 10</pos>
	</helpsystem>

	<!-- Sounds -->	
	<sound name="systemscroll">
		<path>./_assets/selecting.wav</path>
	</sound>
	<sound name="launch">
		<path>./_assets/launching.wav</path>
	</sound>

	<!-- Font / Color Settings -->	
	<text name="systemInfo, dev, releasedate, md_name, md_description, md_lbl_players, md_players, md_lbl_developer, md_developer, md_lbl_publisher, md_publsher, md_lbl_genre, md_genre, md_lbl_playcount, md_playcount, md_lbl_lastplayed, md_lbl_releasedate, md_lbl_rating">
		<fontPath>./_assets/FOT-RodinBokutohPro-DB.otf</fontPath>
		<fontSize>0.0545</fontSize>
		<color>282421</color>
	</text>
	<textlist name="gamelist">
		<fontPath>./_assets/FOT-RodinBokutohPro-DB.otf</fontPath>
		<fontSize>0.04</fontSize>
	</textlist>
	<datetime name="md_lastplayed, md_releasedate">
		<fontPath>./_assets/FOT-RodinBokutohPro-DB.otf</fontPath>
		<fontSize>0.04</fontSize>
		<color>282421</color>
	</datetime>
</view>

<!-- Background Images -->
<view name="system">
	<image name="systembg" extra="true">
		<tile>false</tile>
		<path>./_assets/system-global-bg.jpg</path>
		<size>1 1</size>
		<pos>0 0</pos>
		<zIndex>1</zIndex>
	</image>
</view>

<view name="basic, detailed, video">
	<image name="gamelistbg" extra="true">
		<tile>false</tile>
		<path>./_assets/ingame-basic-bg.jpg</path>
		<size>1 1</size>
		<pos>0 0</pos>
		<zIndex>1</zIndex>
	</image>
</view>

<view name="grid">
	<image name="gridbg" extra="true">
		<tile>false</tile>
		<path>./_assets/ingame-global-bg.jpg</path>
		<size>1 1</size>
		<pos>0 0</pos>
		<zIndex>1</zIndex>
	</image>
</view>

<!-- Gamelist Logo -->
<view name="basic, detailed, video, grid">
	<image name="logo2" extra="true">
		<path>./_assets/logos_gamelist/${system.theme}.png</path>
		<origin>0.5 0.5</origin>
		<pos>0.5 0.0675</pos>
		<maxSize>0.6 0.4</maxSize>
	</image>
</view>

<!-- System View -->
<feature supported="carousel">
<view name="system">

	<text name="systemInfo">
		<alignment>right</alignment>
		<backgroundColor>00000000</backgroundColor>
		<origin>1 0.5</origin>
		<pos>0.89 0.0425</pos>
		<size>0.43 0.03</size>
	</text>

	<image name="system" extra="true">
		<path>./_assets/systems/${system.theme}.png</path>
		<tile>false</tile>
		<origin>0 0</origin>
		<pos>0 0</pos>
		<size>1 1</size>
	</image>

	<image name="logo">
		<path>./_assets/logos_systems/${system.theme}.png</path>
	</image>

	<carousel name="systemcarousel">
		<type>horizontal</type>
		<color>00000000</color>
		<origin>0.5 0.5</origin>
		<pos>0.295 0.765</pos>
		<size>1 0.25</size> 
		<logoScale>1.0</logoScale>
		<logoSize>0.21 0.21</logoSize>
		<maxLogoCount>1</maxLogoCount>
		<logoAlignment>center</logoAlignment> 
	</carousel>

	<text name="dev" extra="true">
		<alignment>center</alignment>
		<origin>0.5 0.5</origin>
		<pos>0.62 0.73</pos>
		<size>0.35 0.03</size>
	</text>

	<text name="releasedate" extra="true">
		<alignment>center</alignment>
		<origin>0.5 0.5</origin>
		<pos>0.62 0.795</pos>
		<size>0.35 0.03</size>
	</text>

</view>
</feature>

<!-- Global Gamelist Settings -->
<view name="basic, detailed, video">

	<textlist name="gamelist">
		<primaryColor>282421</primaryColor>
		<secondaryColor>21BAFE</secondaryColor>
		<selectorColor>9BB1C9</selectorColor>
		<selectedColor>282421</selectedColor>
		<scrollSound>./_assets/selecting.wav</scrollSound>
		<alignment>left</alignment>
		<origin>0.5 0.5</origin>
		<pos>0.25 0.52</pos>
		<size>0.45 0.7</size>
		<lineSpacing>1.5</lineSpacing>
	</textlist>

</view>

<!-- Basic View -->
<view name="basic">
	<textlist name="gamelist">
		<pos>0.5 0.52</pos>
		<alignment>center</alignment>
	</textlist>
</view>
<!-- Detailed View -->
<view name="detailed">
	<image name="md_image">
		<origin>0.5 0.5</origin>
		<pos>0.75 0.52</pos>
		<maxSize>0.45 0.45</maxSize>
	</image>
</view>

<!-- Video View -->
<feature supported="video">
<view name="video">
	<image name="md_marquee">
		<origin>0.5 0.5</origin>
		<pos>0.75 0.25</pos>
		<maxSize>0.18 0.18</maxSize>
	</image>
	<video name="md_video">
		<origin>0.5 0.5</origin>
		<pos>0.75 0.52</pos>
		<maxSize>0.45 0.45</maxSize>
		<delay>2</delay>
		<showSnapshotNoVideo>true</showSnapshotNoVideo>
		<showSnapshotDelay>true</showSnapshotDelay>
	</video>
</view>
</feature>

<!-- Grid View -->
<view name="grid">

	<!-- Game Name -->
	<text name="md_name">
		<fontSize>0.065</fontSize>
		<alignment>center</alignment>
		<origin>0.5 0.5</origin>
		<pos>0.5 0.295</pos>
		<size>0.735 0.05</size>
	</text>
	<!-- Label Genre -->	
	<text name="md_developer">
		<fontSize>0.065</fontSize>
		<alignment>center</alignment>
		<origin>0.5 0.5</origin>
		<pos>0.5 0.375</pos>
		<size>0.735 0.05</size>
	</text>

	<!-- Grid -->
	<imagegrid name="gamegrid">
		<scrollDirection>horizontal</scrollDirection>
		<pos>0.089 0.475</pos>
		<size>0.82 0.36</size>
		<margin>-0.01 0</margin>
	</imagegrid>
	<gridtile name="default">
		<size>0.28 0.39</size>
		<padding>60 60</padding>
		<backgroundImage>./_assets/tile.png</backgroundImage>
		<backgroundColor>ffffffff</backgroundColor>
	</gridtile>
	<gridtile name="selected">
		<size>0.28 0.39</size>
		<padding>60 60</padding>
		<backgroundImage>./_assets/icon.png</backgroundImage>
		<backgroundColor>ffffffff</backgroundColor>
	</gridtile>
</view>
</theme>
