<theme>
<formatVersion>4</formatVersion>

<!-- Placeholder Background -->
<view name="system, basic, detailed, video, grid">
 <image name="background" extra="true">
	<path>./_assets/dot.png</path>
	<color>B3B3B9</color>
	<origin>0 0</origin>
	<pos>0 0</pos>
	<size>1 1</size>
	<zIndex>1</zIndex>
 </image>
 
 <sound name="systemscroll">
	<path>./_assets/selecting.wav</path>
 </sound>
		
 <sound name="systemselect">
	<path>./_assets/systemscroll.wav</path>
 </sound>

 <sound name="back">
	<path>./_assets/back.wav</path>
 </sound>
		
 <sound name="launch">
	<path>./_assets/launching.wav</path>
 </sound>
		
 <sound name="menuopen">
	<path>./_assets/menu.wav</path>
 </sound>
</view>

<!-- Background Images -->
<view name="system">
 <image name="systembg" extra="true">
	<tile>false</tile>
	<path>./_assets/system-global-bg.jpg</path>
	<size>1 1</size>
	<pos>0 0</pos>
	<zIndex>1</zIndex>
 </image>
</view>
